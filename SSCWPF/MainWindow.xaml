<Window x:Class="SSCWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SSCWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="5" Grid.Row="0">
            <Button x:Name="Button1" Content="Select Image 1" Click="Button_Click"/>
            <Button x:Name="Button2" Content="Select Image 2" Click="Button2_Click"/>
        </StackPanel>
        
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border Background="LightGray" Margin="10" Grid.Column="0" Width="150" Height="150">
                <Image x:Name="Image1" Width="150" Height="150"/>
            </Border>
            <Border Background="LightGray" Margin="10" Grid.Column="1" Width="150" Height="150">
                <Image x:Name="Image2" Width="150" Height="150"/>
            </Border>
        </Grid>
    </Grid>
</Window>